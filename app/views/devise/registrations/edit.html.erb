<div class="col s12">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="card">
      <div class="card-action card_action_title with_out_title">
      <span class="card-title white-text">Seguridad</span>
        <%= f.button :button, type: :submit, class:"actions waves-effect waves-light btn right action_button_card action_button_card_first_right" do %>
        GUARDAR
        <% end %>
        <%= link_to 'ATRAS', current_user, class:"actions waves-effect waves-light btn right action_button_card" %>
      </div>
      <div class="card-content">
        <div class="row card_content_row">
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="input-field col s12">
            <%= f.label :current_password, 'Contraseña actual' %>
            <%= f.password_field :current_password, autocomplete: "current-password" %>
            <i>(we need your current password to confirm your changes)</i>
          </div>

          <div class="input-field col s6">
            <%= f.label :password, 'Nueva contraseña' %>
            <%= f.password_field :password, autocomplete: "new-password" %>
            <i>(leave blank if you don't want to change it)</i>
            <% if @minimum_password_length %>

            <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="input-field col s6">
            <%= f.label :password_confirmation, 'Nueva contraseña' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col s12">
      <div class="center-align">
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "¿Estás Seguro?" }, method: :delete, class:"col s12 waves-effect waves-light btn btn_big btn_alert"  %>
      </div>
    </div>
  </div>
</div>
