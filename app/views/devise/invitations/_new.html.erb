<h2><%= t "devise.invitations.new.header" %></h2>

<%= form_for(User.new, url: user_invitation_path) do |f| %>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="input-field col s4">
    <%= f.collection_select :role, User.roles, :first, ->(role) { role.first }, {}, { class: 'js-choice' } %>
    <%= f.label :role, 'role', class: 'active' %>
  </div>

  <div class="field">
    <%= f.label :level %>
    <%= f.text_field :level %>
  </div>

  <div class="actions">
    <%= f.submit t("devise.invitations.new.submit_button") %>
  </div>
<% end %>
