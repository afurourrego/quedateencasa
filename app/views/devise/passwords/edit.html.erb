<div class="card_container">
  <span class="helper"></span>

  <div class="col s12 m6 offset-m3">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="card">
        <div class="card-action card_action_title">
        <span class="card-title white-text">Contraseña</span>
          <%= f.button :button, type: :submit, class:"actions waves-effect waves-light btn right action_button_card action_button_card_first_right" do %>
          GUARDAR
          <% end %>
        </div>
        <div class="card-content">
          <div class="row">
            <div class="col s12 m10 offset-m1">
              <div class="field">
                <%= f.label :password, "Nueva contraseña" %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> caracteres minimos)</em>
                <% end %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation, "Confirmar nueva contraseña" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>

            </div>
          </div>
        </div>
      </div>
      <div class="center">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>

  </div>
</div>
