<div class="card_container">
  <span class="helper"></span>

  <div class="col s12 m6 offset-m3">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="card">
        <div class="card-action card_action_title">
          <span class="card-title white-text">Olvide mi Contrase√±a</span>

          <%= f.button :button, type: :submit, class:"actions waves-effect waves-light btn right action_button_card action_button_card_first_right" do %>
            CONFIRMAR
          <% end %>
        </div>
        <div class="card-content">
          <div class="row">
            <div class="col s12 m10 offset-m1">

              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>

            </div>
          </div>
        </div>
      </div>
      <div class="center">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
