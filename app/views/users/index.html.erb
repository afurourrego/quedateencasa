<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Level</th>
      <th>Active</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user do %>
            <%= user.email %>
          <% end %>
        </td>
        <td>
          <%= link_to user do %>
            <%= user.role %>
          <% end %>
        </td>
        <td>
          <%= link_to user do %>
            <%= user.level %>
          <% end %>
        </td>
        <td>
          <%= link_to user do %>
            <%= user_status(user) %>
          <% end %>
        </td>
        <% if can? :edit, User %>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% end %>
        <% if can? :delete, User %>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, User %>
  <%= render partial: 'devise/invitations/new' %>
<% end %>
